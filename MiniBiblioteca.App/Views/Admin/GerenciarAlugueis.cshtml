@{
    ViewData["Title"] = "Gerenciar Aluguéis";
}

<div class="row mb-4">
    <div class="col-md-12">
        <h2><i class="fas fa-handshake"></i> Gerenciar Aluguéis</h2>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-list"></i> Todos os Aluguéis Ativos</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="tableAlugueis" class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Usuário</th>
                                <th>Email</th>
                                <th>Livro</th>
                                <th>Autor</th>
                                <th>Data Aluguel</th>
                                <th>Devolução Prevista</th>
                                <th>Dias Aluguel</th>
                                <th>Status</th>
                                <th>Dias Restantes</th>
                                <th>Multa</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let tableAlugueis;

        $(document).ready(function() {
            carregarAlugueis();
        });

        function carregarAlugueis() {
            $.ajax({
                url: '@Url.Action("GetTodosAlugueis", "Admin")',
                type: 'GET',
                success: function(response) {
                    if (response.success) {
                        renderizarTabela(response.data);
                    }
                },
                error: function() {
                    Swal.fire('Erro', 'Erro ao carregar aluguéis', 'error');
                }
            });
        }

        function renderizarTabela(alugueis) {
            if (tableAlugueis) {
                tableAlugueis.destroy();
            }

            const tbody = $('#tableAlugueis tbody');
            tbody.empty();

            alugueis.forEach(function(aluguel) {
                const hoje = new Date();
                const dataPrevista = new Date(aluguel.dataPrevistaDevolucao);
                const diffTime = dataPrevista - hoje;
                const diasRestantes = Math.ceil(diffTime / (1000 * 60 * 60 * 24));

                let statusBadge = '';
                if (aluguel.status === 1) { // Ativo
                    statusBadge = '<span class="badge bg-success">Ativo</span>';
                } else if (aluguel.status === 3) { // Atrasado
                    statusBadge = '<span class="badge bg-danger">Atrasado</span>';
                }

                let diasRestantesTexto = diasRestantes >= 0
                    ? `${diasRestantes} dias`
                    : `<span class="text-danger">${Math.abs(diasRestantes)} dias atrasado</span>`;

                const multaTexto = aluguel.valorMulta
                    ? `R$ ${aluguel.valorMulta.toFixed(2)}`
                    : '-';

                const row = `
                    <tr>
                        <td>${aluguel.id}</td>
                        <td>${aluguel.nomeUsuario}</td>
                        <td>${aluguel.emailUsuario}</td>
                        <td>${aluguel.tituloLivro}</td>
                        <td>${aluguel.autorLivro}</td>
                        <td>${new Date(aluguel.dataAluguel).toLocaleDateString('pt-BR')}</td>
                        <td>${new Date(aluguel.dataPrevistaDevolucao).toLocaleDateString('pt-BR')}</td>
                        <td>${aluguel.diasAluguel}</td>
                        <td>${statusBadge}</td>
                        <td>${diasRestantesTexto}</td>
                        <td>${multaTexto}</td>
                    </tr>
                `;
                tbody.append(row);
            });

            tableAlugueis = $('#tableAlugueis').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/pt-BR.json'
                },
                order: [[0, 'desc']]
            });
        }
    </script>
}