@{
    ViewData["Title"] = "Gerenciar Aluguéis";
}

<div class="row mb-4">
    <div class="col-md-12">
        <h2><i class="fas fa-handshake"></i> Gerenciar Aluguéis</h2>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-list"></i> Todos os Aluguéis</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="tableAlugueis" class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Usuário</th>
                                <th>Email</th>
                                <th>Livro</th>
                                <th>Autor</th>
                                <th>Data Aluguel</th>
                                <th>Devolução Prevista</th>
                                <th>Data Devolução</th>
                                <th>Status</th>
                                <th>Dias Restantes</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let tableAlugueis;

        $(document).ready(function() {
            carregarAlugueis();
        });

        function carregarAlugueis() {
            $.ajax({
                url: '@Url.Action("GetTodosAlugueis", "Admin")',
                type: 'GET',
                success: function(response) {
                    if (response.success) {
                        renderizarTabela(response.data);
                    }
                },
                error: function() {
                    Swal.fire('Erro', 'Erro ao carregar aluguéis', 'error');
                }
            });
        }

        function renderizarTabela(alugueis) {
            if (tableAlugueis) {
                tableAlugueis.destroy();
            }

            const tbody = $('#tableAlugueis tbody');
            tbody.empty();

            if (!alugueis || alugueis.length === 0) {
                tbody.append('<tr><td colspan="10" class="text-center">Nenhum aluguel encontrado</td></tr>');
                return;
            }

            const hoje = new Date();

            alugueis.forEach(function(aluguel) {
                const statusBadge = getStatus(aluguel.status);
                const isAtivo = aluguel.status === 1 || aluguel.status === 3;

                let diasRestantesTexto;
                let dataDevolucao;

                if (isAtivo) {
                    dataDevolucao = '-';
                    const dataPrevista = new Date(aluguel.dataPrevistaDevolucao);
                    const dias = Math.ceil((dataPrevista - hoje) / (1000 * 60 * 60 * 24));

                    if (dias < 0) {
                        diasRestantesTexto = `<span class="text-danger">${Math.abs(dias)} dias atrasado</span>`;
                    } else if (dias === 0) {
                        diasRestantesTexto = `<span class="text-warning">Vence hoje</span>`;
                    } else {
                        diasRestantesTexto = `${dias} dias restantes`;
                    }
                } else {
                    dataDevolucao = new Date(aluguel.dataDevolucao).toLocaleDateString('pt-BR');
                    const dataPrevista = new Date(aluguel.dataPrevistaDevolucao);
                    const dataEntregue = new Date(aluguel.dataDevolucao);
                    const dias = Math.ceil((dataPrevista - dataEntregue) / (1000 * 60 * 60 * 24));

                    if (dias < 0) {
                        diasRestantesTexto = `<span class="text-danger">${Math.abs(dias)} dias de atraso</span>`;
                    } else {
                        diasRestantesTexto = `<span class="text-success">No prazo</span>`;
                    }
                }

                const row = `
                    <tr>
                        <td>${aluguel.idAluguel}</td>
                        <td>${aluguel.nomeUsuario}</td>
                        <td>${aluguel.emailUsuario}</td>
                        <td>${aluguel.tituloLivro}</td>
                        <td>${aluguel.nomeAutor}</td>
                        <td>${new Date(aluguel.dataAluguel).toLocaleDateString('pt-BR')}</td>
                        <td>${new Date(aluguel.dataPrevistaDevolucao).toLocaleDateString('pt-BR')}</td>
                        <td>${dataDevolucao}</td>
                        <td>${statusBadge}</td>
                        <td>${diasRestantesTexto}</td>
                    </tr>
                `;
                tbody.append(row);
            });

            tableAlugueis = $('#tableAlugueis').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/pt-BR.json'
                },
                order: [[0, 'desc']]
            });
        }

        function getStatus(status) {
            let label, color;

            switch(status) {
                case 1:
                    label = 'Ativo';
                    color = 'success';
                    break;
                case 2: 
                    label = 'Devolvido';
                    color = 'info';
                    break;
                case 3: 
                    label = 'Atrasado';
                    color = 'danger';
                    break;
                case 4: 
                    label = 'Devolvido com Atraso';
                    color = 'warning';
                    break;
                default:
                    label = 'Desconhecido';
                    color = 'secondary';
            }

            return `<span class="badge bg-${color}">${label}</span>`;
        }

    </script>
}