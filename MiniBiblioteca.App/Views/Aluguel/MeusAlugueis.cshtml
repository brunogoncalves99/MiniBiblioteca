@{
    ViewData["Title"] = "Meus Aluguéis";
}

<div class="row mb-4">
    <div class="col-md-12">
        <h2><i class="fas fa-list"></i> Meus Aluguéis</h2>
        <hr />
    </div>
</div>

<ul class="nav nav-tabs mb-3" id="alugueisTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="ativos-tab" data-bs-toggle="tab" data-bs-target="#ativos" type="button">
            <i class="fas fa-book-open"></i> Ativos
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="historico-tab" data-bs-toggle="tab" data-bs-target="#historico" type="button">
            <i class="fas fa-history"></i> Histórico
        </button>
    </li>
</ul>

<div class="tab-content" id="alugueisTabContent">
    <div class="tab-pane fade show active" id="ativos" role="tabpanel">
        <div class="table-responsive">
            <table id="tableAtivos" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Livro</th>
                        <th>Autor</th>
                        <th>Data Aluguel</th>
                        <th>Devolução Prevista</th>
                        <th>Status</th>
                        <th>Dias Restantes</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>

    <div class="tab-pane fade" id="historico" role="tabpanel">
        <div class="table-responsive">
            <table id="tableHistorico" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Livro</th>
                        <th>Autor</th>
                        <th>Data Aluguel</th>
                        <th>Data Devolução</th>
                        <th>Status</th>
                        <th>Multa</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/alugueis.js" asp-append-version="true"></script>
}